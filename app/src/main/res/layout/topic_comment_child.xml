<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Commentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_item_selector">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:src="@drawable/ic_default_user" />


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon"
                android:layout_below="@+id/name"
                android:layout_marginRight="12dp"
                android:background="@drawable/content_pressed_selector"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.1"
                tools:text="好好学习天天向上"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/font_black_6"
                android:textSize="15sp" />
        </LinearLayout>

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/layoutContent"
                android:layout_below="@id/layoutContent"
                android:text="超级小胖纸"
                android:textColor="@color/font_black_9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/name"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="5dp"
                android:text="3分钟前"
                android:textColor="@color/font_black_9"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:text="查看全部12条评论"
            android:textColor="#32BE77"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:id="@+id/moreChildComment"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--<include-->
    <!--layout="@layout/divide_1"-->
    <!--android:layout_below="@id/layout_1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_marginTop="10dp" />-->

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomLine"
        android:layout_toRightOf="@id/icon"
        style="@style/DivideLine" />

</RelativeLayout>
