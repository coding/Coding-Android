<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/task_list_head">

    <include layout="@layout/list_divider_big" />

    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="邮箱"
            android:textColor="#222222"
            android:textSize="18sp"
            android:id="@+id/个性后缀" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="邮箱"
            android:textColor="@color/font_black_comment"
            android:textSize="18sp"
            android:id="@+id/email"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <include layout="@layout/list_divider_small" />

    <RelativeLayout
        android:id="@+id/aboutCoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="个性后缀"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="邮箱"
            android:textColor="@color/font_black_comment"
            android:textSize="18sp"
            android:id="@+id/suffix"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


    <include layout="@layout/list_divider_big" />

    <RelativeLayout
        android:id="@+id/passwordSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="修改密码"
            android:textColor="#222222"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
