<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stand_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/padding_12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/maopao_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="@dimen/padding_12" />


        <TextView
            android:id="@+id/maopao_content"
            tools:text="一k狂卡k矿坑龙到访e矿E酷氪氪一k狂卡k矿坑龙到访e矿E酷氪氪一k狂卡k矿坑龙到访e矿E酷氪氪一k狂卡k矿坑龙到访e矿E酷氪氪"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_14"
            android:layout_toRightOf="@+id/maopao_user_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.1"
            android:singleLine="false"
            android:textColor="@color/font_black_2"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/maopao_content"
            android:layout_below="@+id/maopao_content"
            android:layout_marginBottom="@dimen/padding_14"
            android:layout_marginTop="@dimen/padding_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maopao_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_12"
                android:text="蝈蝈已"
                android:textColor="@color/font_black_2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/maopao_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/subject_search_item_clock"
                android:drawablePadding="4dp"
                android:text="1小时前"
                android:textColor="@color/font_black_9"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_12"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/maopao_item_liked_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/subject_search_item_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="13"
                    android:textColor="@color/font_black_9" />
            </LinearLayout>

            <TextView
                android:id="@+id/maopao_item_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_12"
                android:drawableLeft="@drawable/subject_search_item_like"
                android:drawablePadding="4dp"
                android:text="9"
                android:textColor="@color/font_black_9"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/maopao_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_12"
                android:drawableLeft="@drawable/subject_search_item_comment"
                android:drawablePadding="4dp"
                android:text="9"
                android:textColor="@color/font_black_9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/padding_12"
        android:background="@color/search_divide_color" />
</LinearLayout>
