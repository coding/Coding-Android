<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/init_common_bg"
    >

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/projectIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="1dp"
            android:background="@drawable/round_icon_path"
            android:src="@color/font_black_0" />


        <EditText
            android:layout_width="match_parent"
            android:hint="项目名称"
            android:id="@+id/projectName"
            android:textSize="20sp"
            android:background="@null"
            android:layout_marginLeft="14dp"
            android:singleLine="true"
            android:textColor="@color/font_black_2"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:background="@color/divide"
        />

    <EditText
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:hint="填写项目描述..."
        android:gravity="start"
        android:padding="14dp"
        android:textColor="@color/font_black_2"
        android:textSize="15sp"
        android:lines="5"
        android:maxLines="5"
        android:id="@+id/description"
        android:layout_height="wrap_content"/>

    <include layout="@layout/divide_15_top_bottom" />

    <include layout="@layout/init_common_item" android:id="@+id/item"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@drawable/divide_15_top" />

</LinearLayout>