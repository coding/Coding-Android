<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants"
    tools:context=".project.detail.TaskListFragment">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_task_0"
        android:checked="false"
        android:focusable="false" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_centerVertical="true"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/checkbox"
        android:src="@drawable/ic_default_user" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="      江龙减法看东方看a东皇反抗a双簧反抗a荒废"
        android:lineSpacingExtra="3dp"
        android:textColor="#555555"
        android:textSize="15sp"
        android:phoneNumber="false" />

    <View
        android:id="@+id/taskPriority"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/task_mark_0"
        android:layout_alignTop="@id/title"
        android:layout_alignLeft="@id/title"
        android:focusable="false"
        android:layout_marginTop="1.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_rect_shape_green"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="aaa"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蝈蝈"
            android:textColor="@color/font_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="2dp"
            android:text="Small Text"
            android:textColor="@color/font_gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_task_comment"
            android:drawablePadding="4dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="333"
            android:textColor="@color/font_gray"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/taskDes"
            android:text="描述"
            android:textColor="@color/font_gray"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_task_des" />

    </LinearLayout>

</RelativeLayout>
