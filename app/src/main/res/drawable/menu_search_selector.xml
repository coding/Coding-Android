<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认时的背景图片-->
    <item android:drawable="@drawable/ic_filter_normal" />
    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/ic_filter_normal" android:state_window_focused="false" />
    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:drawable="@drawable/ic_filter_click" android:state_focused="true" android:state_pressed="true" />

    <!--选中时的图片背景-->

    <item android:drawable="@drawable/ic_filter_click" android:state_selected="true" />
</selector>